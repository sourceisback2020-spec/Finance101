{
  "name": "cursor",
  "description": "Local desktop finance app for personal money management.",
  "author": "Braydon",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:web\" \"npm:dev:electron\"",
    "dev:web": "vite --port 5273 --strictPort",
    "dev:electron": "npm run build:electron && wait-on tcp:5273 && electron dist-electron/main.js",
    "dev:object3d": "npm --prefix apps/object3d-web run dev",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:object3d": "npm --prefix apps/object3d-web run build",
    "start": "electron dist-electron/main.js",
    "start:object3d:api": "npm --prefix apps/object3d-web run start:api",
    "dist": "npm run build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:object3d": "npm --prefix apps/object3d-web run preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.6.2",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.7.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "globals": "^16.5.0",
    "jsdom": "^26.1.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.localfinance.desktop",
    "productName": "Local Finance Planner",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    }
  }
}
